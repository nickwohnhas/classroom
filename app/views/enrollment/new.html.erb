
<head>
    <style type="text/css">
        .col-sm-3 {
          margin-top: 20px;
        }
      </style>
</head>
<a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">
Fall 2018 Courses</a>
<a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample2" role="button" aria-expanded="false" aria-controls="multiCollapseExample2">Winter 2019 Courses</a>
<div class="row">
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample1">
      <div class="card card-body">
<% if @enrollment.errors.any? %>
  <div id="field_with_errors">
    <h2>There were some errors:</h2>
    <ul>
      <% @enrollment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @course, url: '/enrollment' do |f| %>
<%= f.label "Fall 2018:" %><br>
<%= f.collection_select(:name, Course.fall_semester, :id, :name,{include_blank: 'Select a course'}) %><br><br>
<%= f.label :student_year %>:
<br>
<%= f.submit "Enroll!" %><br>
<% end %><br>
      </div>
    </div>
  </div>

<div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample2">
      <div class="card card-body">

<%= form_for @course, url: '/enrollment' do |f| %>
<%= f. label "Winter 2019:" %><br>
<%= f.collection_select(:name, Course.winter_semester, :id, :name,{include_blank: 'Select a course'}) %><br><br>
<%= f.label :student_year %>:
<br>
<%= f.submit "Enroll!" %><br>
<% end %><br>
      </div>
    </div>
  </div>
</div>



<%= link_to "Return to Course Catalogue", profiles_courses_path %>
