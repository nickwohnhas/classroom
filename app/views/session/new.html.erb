<h3>Log In</h3>

<% if @user.errors.any? %>
  <div id="field_with_errors">
    <h2>There were some errors:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>





<%= form_for @user, url: '/session' do |f| %>
  <%= f.label "email:" %><br>
  <%= f.text_field :email %><br>

  <%= f.label "password:" %><br>
  <%= f.password_field :password %><br>
<br>
<%= f.submit "Sign In" %>
<% end %>
<br>
<%= link_to "Return Home", root_path %>
